<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane prefWidth="500" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="cj.software.experiments.gentsp.javafx.NewProblemController">
    <content>
        <GridPane hgap="5" vgap="5">
            <Label text="number of cities" />
         <TextField fx:id="tfNumberCities" GridPane.columnIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints hgrow="ALWAYS"/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType buttonData="CANCEL_CLOSE" text="Cancel"/>
        <ButtonType buttonData="OK_DONE" text="OK"/>
    </buttonTypes>
</DialogPane>
